---
import LooMap from "../components/LooMap";
import Layout from "../layouts/Layout.astro";

const runtime = Astro.locals.runtime;
// biome-ignore lint/correctness/noUnusedVariables: referenced in template markup below
const apiUrl =
  runtime?.env?.PUBLIC_API_URL || import.meta.env.PUBLIC_API_URL || "http://localhost:8787";
---

<Layout>
<main>
<LooMap client:only="preact" apiUrl={apiUrl} />
</main>
</Layout>

<style>
.hero {
padding: var(--space-xl) 0;
text-align: center;
}

h1 {
font-size: var(--text-4);
color: var(--color-primary-navy);
margin-bottom: var(--space-m);
}

p {
font-size: var(--text-1);
color: var(--color-neutral-grey);
}

.center {
box-sizing: content-box;
margin-inline: auto;
max-inline-size: var(--toilet-max-width);
}

.center--gutter {
padding-inline: var(--toilet-gutter);
}
</style>
