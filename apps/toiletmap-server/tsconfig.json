{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "./worker-configuration.d.ts",
      "hono/jsx",
      "hono/jsx/dom"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2023",
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "tests",
    "src/admin/pages/loos/client/**/*",
    "src/admin/pages/loos/create/client/**/*"
  ]
}
