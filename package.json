{
  "name": "toiletmap-server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "start": "wrangler dev",
    "build": "wrangler build",
    "check": "wrangler deploy --dry-run",
    "cf-typegen": "wrangler types",
    "deploy": "wrangler deploy",
    "docs:generate": "tsx src/docs/generate.ts",
    "prisma:generate": "prisma generate --schema prisma/schema.prisma",
    "supabase:start": "SUPABASE_SCANNER_BUFFER_SIZE=100mb supabase start --exclude gotrue,realtime,storage-api,imgproxy,kong,mailpit,postgrest,postgres-meta,studio,edge-runtime,logflare,vector,supavisor",
    "supabase:stop": "supabase stop",
    "supabase:reset": "SUPABASE_SCANNER_BUFFER_SIZE=100mb supabase db reset",
    "test:e2e": "bash scripts/test-e2e.sh"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.5.1",
    "@hono/zod-openapi": "^1.1.4",
    "@hono/zod-validator": "^0.7.5",
    "@prisma/adapter-pg": "^7.0.0",
    "@prisma/client": "^7.0.0",
    "hono": "^4.10.6",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0",
    "openapi3-ts": "^4.5.0",
    "pg": "^8.16.3",
    "prisma": "^7.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.15.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "22.12.0",
    "@types/pg": "^8.15.6",
    "dotenv": "^17.2.3",
    "supabase": "^2.58.5",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^3.2.0",
    "wrangler": "^4.50.0"
  },
  "overrides": {
    "hono": "~4.10.6"
  }
}
